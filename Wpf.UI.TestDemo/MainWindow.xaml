<ui:FluentWindow
	x:Class="Wpf.UI.TestDemo.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Wpf.UI.TestDemo"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
	Name="mwd"
	Title="MainWindow"
	Width="1024"
	Height="768"
	d:DesignHeight="450"
	d:DesignWidth="800"
	ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
	ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
	ExtendsContentIntoTitleBar="True"
	Foreground="{DynamicResource TextFillColorPrimaryBrush}"
	WindowBackdropType="Mica"
	WindowCornerPreference="Round"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<ui:NavigationView Grid.Row="1" PaneDisplayMode="LeftFluent">
			<ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Icon="{ui:SymbolIcon Home24}" Content="对比"/>
            </ui:NavigationView.MenuItems>
		</ui:NavigationView>
		<ui:TitleBar Title="{Binding ElementName=mwd, Path=Title}" Grid.Row="0" />
	</Grid>
</ui:FluentWindow>
